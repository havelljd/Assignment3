@{
    ViewBag.Title = "View Movies";
}

@model IEnumerable<DateMe.Models.EnterMovieModel>

<div>
    <h2>
        Here are all my movies!
    </h2>
    <table style="border-spacing: 10px;">
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To:</th><th>Notes</th></tr>
        </thead>

        <tbody>
            @foreach (DateMe.Models.EnterMovieModel x in Model)
            {
                <tr>
                <td syle="padding: 0 15px;">@x.category</td>
                <td syle="padding: 0 15px;">@x.title</td>
                <td>@x.year</td>
                <td>@x.director</td>
                <td>@x.rating</td>
                <td>@x.edited</td>
                <td>@x.lentto</td>
                <td>@x.notes</td>
                    </tr>
            }
        </tbody>
    </table>
</div>